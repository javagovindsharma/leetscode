// JAVA CODE
    static int sumOfNaturals(int n) {
        // code here
        int mod = 1000000007;
        long ans=(((long)n*(n+1))/2)%mod;
        return (int)ans;
    }
    
// C++ CODE

    int sumOfNaturals(int n) {
        // code here
        int mod = 1e9+7;
        return (((long long)n*(n+1))/2)%mod;
    }
